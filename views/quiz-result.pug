doctype html
html
  head
    title Kwiiz
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge,chrome=1")
    meta(name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no")
    meta(name="description" content="Quiz divertidos para facebook, curiosidades do Mundo e diversos jogos. Descubra coisas que ainda não sabe!")
    meta(property="fb:app_id" content="1539632829441491")
    meta(property="og:image" content=img)
    meta(property="og:image:type" content="image/jpeg")
    meta(property="og:image:width" content="800")
    meta(property="og:image:height" content="420")
    meta(property="og:url" rel="canonical" content=site)
    meta(property="og:type" content="article")
    meta(property="og:title" content=title)
    meta(property="og:description" content=description)
    meta(property="og:site_name" content="Kwiiz")
    meta(property="og:locale" content="pg_BR")
    meta(property="article:tag" content="quiz")
    meta(property="article:author" content="https://www.facebook.com/kwiizcom/")
    meta(property="article:publisher" content="https://www.facebook.com/kwiizcom/")
    link(href="/images/kwiiz.ico" rel="shortcut icon" type="image/x-icon")

    link(href="//fonts.googleapis.com/css?family=Raleway:400,300,600" rel="stylesheet" type="text/css")
    link(rel="stylesheet" type="text/css" href="/lib/skeleton.css")
    link(rel="stylesheet" type="text/css" href="/index.css")
    link(rel="stylesheet" type="text/css" href="/quiz.css")
    script.
      window.fbAsyncInit = function() {
        FB.init({
          appId            : '1539632829441491',
          autoLogAppEvents : true,
          xfbml            : true,
          version          : 'v2.9'
        });
        FB.AppEvents.logPageView();
      };

      (function(d, s, id){
        var js, fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id)) {return;}
        js = d.createElement(s); js.id = id;
        js.src = "//connect.facebook.net/pt_BR/sdk.js";
        fjs.parentNode.insertBefore(js, fjs);
      }(document, 'script', 'facebook-jssdk'));

    script(src="/lib/jquery-3.2.1.min.js")
    script(src="/quiz-result.js")
  body
    div(class="header")
      nav
      header
        a(href="/" class="logo")
    
    div(class="row" style="margin:15px")
      div(class="fb-like" style="float:right" data-href="https://developers.facebook.com/docs/plugins/" data-layout="button_count" data-action="like" data-size="large" data-show-faces="false" data-share="false")
    
    div(class="container")
      div(id="content" class="wrapper")
        div(class="result")
          img(src=img style="width:100%")
          h2 #{name} este é seu resultado!
          h3 Gostou? Comente e compartilhe com seus amigos!
          button(class="btn-facebook btn-share" data-href=site data-layout="button")
            span Compartilhar no Facebook
    footer
      a(href="/termos-e-privacidade.html") Termos e privacidade
      div Kwiiz